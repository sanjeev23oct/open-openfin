{
  "name": "desktop-interop-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:rvm": "npm run dev --workspace=@desktop-interop/rvm",
    "dev:runtime": "npm run dev --workspace=@desktop-interop/runtime",
    "dev:provider": "npm run dev --workspace=@desktop-interop/provider",
    "build": "npm run build --workspaces",
    "test": "jest",
    "test:fdc3": "electron test-launcher.js",
    "start": "electron platform-launcher.js",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
