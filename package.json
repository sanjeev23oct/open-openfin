{
  "name": "desktop-interop-platform",
  "version": "0.1.0",
  "description": "Open-source desktop interoperability platform with FDC3 support",
  "main": "platform-launcher.js",
  "author": "Sanjeev Kumar and Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanjeev23oct/open-openfin.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:rvm": "npm run dev --workspace=@desktop-interop/rvm",
    "dev:runtime": "npm run dev --workspace=@desktop-interop/runtime",
    "dev:provider": "npm run dev --workspace=@desktop-interop/provider",
    "build": "npm run build --workspaces",
    "build:exe": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "test": "jest",
    "test:fdc3": "electron test-launcher.js",
    "start": "electron platform-launcher.js",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "build": {
    "appId": "com.desktopinterop.platform",
    "productName": "Desktop Interop Platform",
    "directories": {
      "output": "dist"
    },
    "files": [
      "platform-launcher.js",
      "platform-preload.js",
      "test-preload.js",
      "test-launcher.js",
      "create-icons.js",
      "platform-ui/**/*",
      "apps/**/*",
      "workspaces/**/*",
      "assets/**/*",
      "packages/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "esbuild": "^0.19.11",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
